
/dts-v1/;
#include "npr.dtsi"
#include <layouts/common/numpad/24_key.dtsi>

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,physical-layout = &layout_numpad_24_key;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <15>;
        rows = <5>;
        map = <
            RC(0,0) RC(0,1) RC(0,2) RC(0,3)
            RC(1,0) RC(1,1) RC(1,2) RC(1,3)
            RC(2,0) RC(2,1) RC(2,2) RC(2,3)
            RC(3,0) RC(3,1) RC(3,2) RC(3,3)
            RC(4,0) RC(4,1) RC(4,2) RC(4,3)
            RC(5,0) RC(5,1) RC(5,2) RC(5,3)
        >;
    };

    kscan0: kscan_0 {
        compatible = "zmk,kscan-gpio-matrix";
        wakeup-source;

        diode-direction = "col2row";

        col-gpios
            = <&gpio1 9 GPIO_ACTIVE_HIGH>
            , <&gpio0 3 GPIO_ACTIVE_HIGH>
            , <&gpio0 1 GPIO_ACTIVE_HIGH>
            , <&gpio0 2 GPIO_ACTIVE_HIGH>
            /** 
            , <&gpioa 3 GPIO_ACTIVE_HIGH>
            , <&gpionf 1 GPIO_ACTIVE_HIGH>
            , <&gpionf 2 GPIO_ACTIVE_HIGH> 
            **/
            ;

        row-gpios
            = <&gpio0 24 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&gpio0 1 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&gpio0 6 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&gpio0 5 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&gpio0 5 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&gpio0 0 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            /**
            , <&gpioxl 1 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&gpioa 6 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&gpioa 5 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&gpioa 5 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&gpioa 0 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            **/
            ;
    };
};

&layout_numpad_24_key {
    transform = <&default_transform>;
};
